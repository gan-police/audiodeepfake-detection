#########################
# Flake8 Configuration  #
# (.flake8)             #
#########################
[flake8]
ignore =
    # pickle
    S301,
    # pickle
    S403,
    S404,
    S603,
    # Line break before binary operator (flake8 is wrong)
    W503,
    # Ignore the spaces black puts before columns.
    E203,
    # allow path extensions for testing.
    E402,
    DAR101,
    DAR201,
    # flake and pylance disagree on linebreaks in strings.
    N400,
    # asserts are ok in test.
    S101,
    # pseudo random gens
    S311,
exclude =
    .tox,
    .git,
    .github,
    __pycache__,
    docs/conf.py,
    build,
    dist,
    *.pyc,
    *.bib,
    *.egg-info,
    .cache,
    .eggs,
    data
max-line-length = 120
max-complexity = 33
application-import-names = tests
